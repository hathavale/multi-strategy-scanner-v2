# Multi-Strategy Options Scanner - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://your_user:your_password@localhost:5432/your_database

# ============================================================================
# ALPHA VANTAGE API
# ============================================================================
# Get your free API key at: https://www.alphavantage.co/support/#api-key
ALPHAVANTAGE_API_KEY=your_api_key_here

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================
# Flask environment: development, production, testing
FLASK_ENV=development

# Enable debug mode (True/False) - NEVER use True in production
FLASK_DEBUG=True

# Application port
PORT=5000

# Secret key for session management (generate a random string for production)
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Maximum symbols to scan in one request
MAX_SYMBOLS_PER_SCAN=10

# API request timeout (seconds)
API_TIMEOUT=30

# Cache TTL (seconds) - how long to cache API responses
CACHE_TTL=300

# Enable rate limiting (True/False)
ENABLE_RATE_LIMITING=True

# Rate limit: requests per minute
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# OPTIONAL: LOGGING
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
LOG_FILE=

# ============================================================================
# OPTIONAL: HEROKU CONFIGURATION
# ============================================================================
# These are automatically set by Heroku, but you can override them

# Heroku sets this automatically
# DATABASE_URL will be overridden by Heroku's PostgreSQL addon

# Heroku sets PORT automatically
# PORT will be set by Heroku

# ============================================================================
# DEVELOPMENT NOTES
# ============================================================================
# 1. Never commit this file with real credentials to version control
# 2. Add .env to your .gitignore file
# 3. Use strong, unique SECRET_KEY in production
# 4. For Heroku: Set environment variables using `heroku config:set KEY=VALUE`
